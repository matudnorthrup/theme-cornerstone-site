<div class="card">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col-auto">


                          <!-- Image -->
                          {% if product.thumbnail_url %}
                            <a href="{{ product.url }}" class="avatar avatar-4by3">
                              <img src="{{ product.thumbnail_url }}" alt="..." class="avatar-img rounded">
                            </a>
                          {% else %}
                            <a href="{{ product.url }}" class="avatar avatar-4by3">
                              <img src="{{ "placeholder.png" | asset_url }}" class="avatar-img rounded"/>
                            </a>
                          {% endif %} 

                          <!-- Avatar -->
                          <!-- <a href="project-overview.html" class="avatar avatar-4by3">
                            <img src="assets/img/avatars/projects/project-1.jpg" alt="..." class="avatar-img rounded">
                          </a> -->

                        </div>
                        <div class="col ml-n2">

                          <!-- Title -->
                          <h4 class="mb-1">
                            <a href="project-overview.html">{{ product.title }}</a>
                          </h4>

                          <!-- Text -->
                          <p class="small text-muted mb-0">
                            {{ product.description | strip_html | truncate: 100 }}
                          </p>

                        </div>
                        <div class="col-auto">

                          <!-- Dropdown -->
                          <div class="dropdown">
                            <a href="#" class="dropdown-ellipses dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <i class="fe fe-more-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                              <a href="#!" class="dropdown-item">
                                Action
                              </a>
                              <a href="#!" class="dropdown-item">
                                Another action
                              </a>
                              <a href="#!" class="dropdown-item">
                                Something else here
                              </a>
                            </div>
                          </div>

                        </div>
                      </div> <!-- / .row -->
                    </div> <!-- / .card-body -->
                  </div>