<div class="col-12">
  <!-- Header -->
  <div class="header mt-md-5">
    <div class="header-body">

      <!-- Pretitle -->
      <h6 class="header-pretitle">
        Overview
      </h6>

      <!-- Title -->
      <h1 class="header-title">
        {{ section.settings.heading }}
      </h1>

    </div>
  </div>
  <!-- Product Cards -->
  <div class="row">

    <!-- Column 1 -->
    <div class="col-12 col-lg-4 d-flex flex-column">  
      <!-- Main Course -->
      {% for product in products %}
        {% if product.id == 411712 %}
          {% include "dash-product-large" %}
        {% endif %}
      {% endfor %}


      <!-- Sub Course -->
      <!-- heading -->
      <div class="row">
        <div class="col">
          <h2>Innovate Mini Courses</h2>
        </div>
      </div>

      <!-- Cards -->
      {% for product in products %}
        {% if product.id == 411712 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
      {% for product in products %}
        {% if product.id == 411712 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
      {% for product in products %}
        {% if product.id == 411712 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
    </div>

    <!-- Column 2 -->
    <div class="col-12 col-lg-4 d-flex flex-column">  
      <!-- Main Course -->
      {% for product in products %}
        {% if product.id == 429919 %}
          {% include "dash-product-large" %}
        {% endif %}
      {% endfor %}


      <!-- Sub Course -->
      <!-- heading -->
      <div class="row">
        <div class="col">
          <h2>Influence Mini Courses</h2>
        </div>
      </div>

      <!-- Cards -->
      {% for product in products %}
        {% if product.id == 429919 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %}
      {% for product in products %}
        {% if product.id == 429919 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %}
      {% for product in products %}
        {% if product.id == 429919 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
    </div>

    <!-- Column 3 -->
    <div class="col-12 col-lg-4 d-flex flex-column">  
      <!-- Main Course -->
      {% for product in products %}
        {% if product.id == 429921 %}
          {% include "dash-product-large" %}
        {% endif %}
      {% endfor %}


      <!-- Sub Course -->
      <!-- heading -->
      <div class="row">
        <div class="col">
          <h2>Sustain Mini Courses</h2>
        </div>
      </div>

      <!-- Cards -->
      {% for product in products %}
        {% if product.id == 429921 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
      {% for product in products %}
        {% if product.id == 429921 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
      {% for product in products %}
        {% if product.id == 429921 %}
          {% include "dash-product-small-row" %}
        {% endif %}
      {% endfor %} 
    </div>
  </div>

  <!-- Misc Courses -->
  <div class="row">
    <div class="col">
      <h2>Other Courses</h2>
      
    </div>
  </div>
  
  <!-- Sub-products -->
  <div class="row">
    {% if products.size > 0 %}
        {% paginate products by 6 %}
          {% for product in paginate.collection %}
            {% if product.id != 429919 and product.id != 411712 and product.id != 429921 %}
                <div class="col-12 col-lg-4">

                  {% include "dash-product-small-row" %}

                </div>
              {% endif %}
            {% endfor %}
          {% if paginate.pages > 1 %}
        {% include "pagination" %}
      {% endif %}
    {% endpaginate %}
  {% endif %}
  </div>
</div>

<!-- Smaller card -->

{% schema %}
  {
    "name": "Products",
    "elements": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "My Products"
      },
      {
        "type": "text",
        "id": "btn",
        "label": "Button Text",
        "default": "Enter"
      }
    ]
  }
{% endschema %}